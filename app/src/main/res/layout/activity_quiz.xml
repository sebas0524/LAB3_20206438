<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7FB"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3E5FC"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:backgroundTint="#B3E5FC"
        android:elevation="2dp"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Listo? Juega!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Knowledge"
            android:textStyle="italic"
            android:textColor="#424242"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E8F5E9"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#E8F5E9"
        android:elevation="2dp"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo\nrestante"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#212121"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️ 00:12"
            android:textSize="16sp"
            android:textColor="#1A237E"
            android:layout_marginStart="12dp"
            android:background="@drawable/timer_box"
            android:padding="4dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/textProgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 1/3"
        android:layout_gravity="center_horizontal"
        android:textColor="#1A237E"
        android:background="@drawable/border_box"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the largest living species of penguin?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginVertical="8dp"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/radioGroupRespuestas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"/>
</LinearLayout>
