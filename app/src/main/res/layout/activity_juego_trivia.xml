<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutTrivia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F0FB"
    android:padding="16dp">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Listo? Juega!"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2C2C2C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Knowledge"
        android:textSize="14sp"
        android:textColor="#2C2C2C"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Contador tiempo -->
    <LinearLayout
        android:id="@+id/layoutTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#D0EADF"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:elevation="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtCategoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtTiempoRestante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/txtTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:drawableStart="@android:drawable/ic_lock_idle_alarm"
            android:drawablePadding="4dp"
            android:padding="4dp"
            android:background="@drawable/borde_azul"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Contador de preguntas respondidas -->


    <!-- Número de pregunta -->
    <TextView
        android:id="@+id/txtContador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 1/3"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@drawable/borde_azul"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/layoutTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pregunta -->
    <TextView
        android:id="@+id/txtPregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¿Pregunta de ejemplo?"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtContador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#999999"
        app:layout_constraintTop_toBottomOf="@id/txtPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Opciones de respuesta -->
    <RadioGroup
        android:id="@+id/radioGroupOpciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Siguiente -->
    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2C2CFF"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:textStyle="bold"
        android:drawableStart="@android:drawable/ic_media_next"
        android:drawablePadding="8dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/groupOpciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
